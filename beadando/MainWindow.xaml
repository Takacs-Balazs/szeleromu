<Window x:Class="beadando.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:beadando"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Beolvasás és Megjelenítés" Width="150" Margin="5" Click="Button_Click"/>
            <Button Content="osszesen" Width="100" Margin="5" Click="Button_Click_1"/>
            <Button Content="kigyujt" Width="100" Margin="5"/>
            <Button Content="program" Width="100" Margin="5" Click="Button_Click_3"/>
            <Button Content="report" Width="100" Margin="5" Click="Button_Click_4"/>
            <TextBox Margin="10" Width="100" Name="txtbx"></TextBox>
        </StackPanel>

        <DataGrid Grid.Row="1" x:Name="dataGrid" AutoGenerateColumns="True" Margin="10"/>
    </Grid>
</Window>
